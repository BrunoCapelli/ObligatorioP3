@model IEnumerable<Domain.DTO.EcosistemaMarinoDTO>

@{
    ViewData["Title"] = "Lista de Ecosistemas";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        /* Estilos para la tabla */
        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        /* Estilo para el botón "Create" */
        .btn-create {
            text-decoration: none;
            background-color: #007bff;
            color: #fff;
            padding: 5px 10px;
            border-radius: 5px;
        }

        /* Estilo para el botón "Delete" */
        .btn-delete {
            background-color: red;
            color: white;
            padding: 5px 10px;
            border-radius: 5px;
        }

        /* Estilo para la imagen */
        img {
            max-width: 70px;
            max-height: 70px;
        }
    </style>
</head>



<body>
    <h4>Especies</h4>

    @if (ViewBag.Msg != "") {
        <h5 style="color:red">@ViewBag.Msg</h5>
    }


    <p>
        <a asp-action="Create" class="btn-create">Crear</a>
    </p>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Area</th>
                <th>Pais</th>
                <th>Latitud</th>
                <th>Longitud</th>
                <th>Grado de Peligro</th>
                <th>Estado de conservacion</th>
                <th>Foto</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.Ecosistema) {
                <tr>
                    <td>@item.EcosistemaMarinoId</td>
                    <td>@item.Nombre</td>
                    <td>@item.Area</td>
                    <td>@item.PaisNombre</td>
                    <td>@item.UbicacionGeografica.Latitud</td>
                    <td>@item.UbicacionGeografica.Longitud</td>
                    <td>@item.UbicacionGeografica.GradoPeligro</td>
                    <td>@item.EstadoConservacion.Nombre</td>
                    <td>
                        <img src="~/img/ecosistemas/@item.ImagenURL" />
                    </td>
                    <td>
                        <form method="post" asp-action="Delete" asp-route-id="@item.EcosistemaMarinoId">
                            <button type="submit" class="btn-delete">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
